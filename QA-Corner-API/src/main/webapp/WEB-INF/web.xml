<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<context-param>
		<param-name>db.config.classname</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>db.config.jdbc.url</param-name>
		<param-value>jdbc:mysql://localhost:3306/qacorner</param-value>
	</context-param>
	<context-param>
		<param-name>db.config.username</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>db.config.password</param-name>
		<param-value>puneet</param-value>
	</context-param>
	<resource-ref>
		<description>
			This is a reference to the global Resource for MySQL
			database connetion.
		</description>
		<res-ref-name>
			jdbc/JCGExampleDB
		</res-ref-name>
		<res-type>
			javax.sql.DataSource
		</res-type>
		<res-auth>
			Container
		</res-auth>
	</resource-ref>
</web-app>
